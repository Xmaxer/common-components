{
    "labels": {
        "ci": {
            "name": "CI",
            "colour": "fff091",
            "description": "CI/CD system"
        },
        "feature": {
            "name": "Feature",
            "colour": "5319e7",
            "description": "Introduce a new feature. Require MINOR version increase"
        },
        "invalid-pr": {
            "name": "Invalid PR",
            "colour": "e09884",
            "description": "A PR with an invalid title"
        },
        "wip": {
            "name": "WIP",
            "colour": "f42ce0",
            "description": "An open PR that is a work in progress"
        },
        "docs": {
            "name": "Documentation",
            "colour": "1d61e0",
            "description": "Documentation related changes"
        },
        "test": {
            "name": "Testing",
            "colour": "20b29c",
            "description": "Test related changes"
        },
        "bugfix": {
            "name": "Bug fix",
            "colour": "d5b8f9",
            "description": "Fix a bug. Require PATCH version increase"
        },
        "development": {
            "name": "Development",
            "colour": "dbe053",
            "description": "Setup, automation, project level changes etc."
        },
        "refactor": {
            "name": "Refactor",
            "colour": "19ed02",
            "description": "Code refactor, without changing functionality"
        },
        "revert": {
            "name": "Revert",
            "colour": "4289ed",
            "description": "Reverting codebase to a previous commit and/or removing commits"
        },
        "dep": {
            "name": "Dependency update",
            "colour": "67840f",
            "description": "Updates to dependencies"
        },
        "breaking": {
            "name": "Breaking change",
            "colour": "ff1100",
            "description": "Introduce breaking changes. Requires MAJOR version increase"
        }
    },
    "pr": {
        "ci": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^ci:"
                },
                {
                    "type": "filesMatch",
                    "glob": ".github/**/*"
                }
            ]
        },
        "feature": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^feat:"
                }
            ]
        },
        "bugfix": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^fix:"
                }
            ]
        },
        "wip": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^wip:"
                }
            ]
        },
        "docs": {
            "requires": 1,
            "conditions": [
                {
                    "type": "filesMatch",
                    "glob": "**/*.*(stories.tsx|stories.ts|stories.jsx|stories.js)"
                },
                {
                    "type": "filesMatch",
                    "glob": ".storybook/**/*"
                },
                {
                    "type": "titleMatches",
                    "pattern": "^docs:"
                }
            ]
        },
        "test": {
            "requires": 1,
            "conditions": [
                {
                    "type": "filesMatch",
                    "glob": "**/*.*(spec.ts|test.tsx|test.ts|spec.tsx)"
                },
                {
                    "type": "titleMatches",
                    "pattern": "^test:"
                }
            ]
        },
        "invalid-pr": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^(?!(feat|fix|refactor|dev|ci|docs|test|revert|wip):)"
                }
            ]
        },
        "refactor": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^refactor:"
                }
            ]
        },
        "development": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^dev:"
                },
                {
                    "type": "filesMatch",
                    "glob": "**/*.*(md|config.js|config.ts)"
                },
                {
                    "type": "filesMatch",
                    "glob": "scripts/**/*"
                }
            ]
        },
        "revert": {
            "requires": 1,
            "conditions": [
                {
                    "type": "titleMatches",
                    "pattern": "^revert:"
                }
            ]
        },
        "dep": {
            "requires": 1,
            "conditions": [
                {
                    "type": "filesMatch",
                    "glob": "package-lock.json"
                }
            ]
        },
        "breaking": {
            "requires": 1,
            "conditions": [
                {
                    "type": "descriptionMatches",
                    "pattern": "/BREAKING CHANGE:/gm"
                }
            ]
        }
    }
}
