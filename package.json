{
    "name": "@common-components/core",
    "version": "0.0.1",
    "description": "The core components",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 0",
        "test:ci": "echo \"Error: no test specified\" && exit 0",
        "build": "rimraf build && babel src --out-dir build --extensions \".tsx,.ts,.js,.jsx\" --ignore \"**/*.stories.tsx\" --source-maps true && tsc --noEmit false --emitDeclarationOnly true && ts-node scripts/generatePackageJson.ts",
        "storybook": "start-storybook -p 6006 -s ../packages/core/public",
        "storybook:build": "build-storybook -s ../packages/core/public",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:ci": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
        "prettier": "prettier --write .",
        "prettier:ci": "prettier --check .",
        "set-git-commit-template": "ts-node scripts/git/set-commit-template.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm-run-all --parallel lint:ci prettier:ci",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "peerDependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "@material-ui/core": "^4.11.0"
    },
    "devDependencies": {
        "@material-ui/core": "4.11.0",
        "react": "16.14.0",
        "react-dom": "16.14.0",
        "typescript": "4.0.3",
        "rimraf": "3.0.2",
        "tslib": "2.0.3",
        "cross-env": "7.0.2",
        "prop-types": "15.7.2",
        "@babel/core": "7.12.3",
        "@babel/preset-typescript": "7.12.1",
        "@babel/preset-react": "7.12.1",
        "@babel/cli": "7.12.1",
        "babel-preset-minify": "0.5.1",
        "chokidar": "3.4.3",
        "react-scripts": "4.0.0",
        "@storybook/addon-actions": "6.0.26",
        "@storybook/addon-essentials": "6.0.26",
        "@storybook/addon-links": "6.0.26",
        "@storybook/node-logger": "6.0.26",
        "@storybook/react": "6.0.26",
        "@storybook/preset-create-react-app": "3.1.4",
        "babel-loader": "8.1.0",
        "react-is": "16.13.1",
        "@babel/node": "7.12.1",
        "@babel/preset-env": "7.12.1",
        "prettier": "2.1.2",
        "eslint": "6.8.0",
        "@typescript-eslint/parser": "4.4.1",
        "@typescript-eslint/eslint-plugin": "4.4.1",
        "eslint-config-prettier": "6.13.0",
        "eslint-plugin-react": "7.21.4",
        "eslint-plugin-react-hooks": "4.1.2",
        "@babel/plugin-transform-runtime": "7.12.1",
        "@babel/runtime": "7.12.1",
        "fs-extra": "9.0.1",
        "@types/fs-extra": "9.0.2",
        "ts-node": "9.0.0",
        "husky": "4.3.0",
        "commitlint": "11.0.0",
        "@commitlint/config-conventional": "11.0.0",
        "npm-run-all": "4.1.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Xmaxer/common-components.git"
    },
    "keywords": [
        "material ui",
        "react",
        "common components"
    ],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Xmaxer/common-components/issues"
    },
    "homepage": "https://github.com/Xmaxer/common-components#readme"
}
